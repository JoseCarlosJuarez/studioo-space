<div class="d-flex">
  <div class="cards-grid p-3 flex-grow-1">
    <% @spaces.each do |space| %>
      <div class="card box-shadow">
        <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="image" src="https://source.unsplash.com/featured/<%= rand(9999) %>/?gallery" data-holder-rendered="true">
        <div class="card-body">
          <h3><%= space.name %></h3>
          <p class="card-text"><%= space.address %>, <%= space.city %> </p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div
    id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>


