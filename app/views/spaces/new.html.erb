<div class="container">
  <br></br>
  <br></br>
  <br></br>
  <div class="row row justify-content-center">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2>List a new Space</h2>
          <%= simple_form_for([@user, @space]) do |f| %>
            <%= f.input :name %>
            <%= f.input :content %>
            <%= f.input :address %>
            <%= f.input :city %>
            <%= f.input :price_per_day %>
            <%= f.input :photo, as: :file%>
            <%= f.submit "List a space", class: "btn btn-primary" %>
          <% end %>
    </div>
  </div>
</div>
