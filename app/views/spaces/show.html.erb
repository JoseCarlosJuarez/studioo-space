<!-- studio info -->
<div class="border-bottom-light bg-white">
  <div class="container d-flex align-items-center justify-content-between py-3">
    <div class="row">
      <div class="col-md-8 p-3">
        <h3><%= @space.name %></h3>
        <p>
          Need an inspiring space for the day!  We've got you covered! This Mission loft is a light filled daily rental for private video / photo productions. The standard rental period is between 8AM and 8PM.
          It is a light filled open floor plan (dining, kitchen and living room) that can host up to a 15 crew production in casual San Francisco style. <a href="url">Read more</a>
        </p>
      </div>
      <div class="col-md-4">
      </div>
    </div>
  </div>
</div>
<!-- /studio info -->

<!-- studio checkout-->
<div class="container">
  <div class="row">
    <div class="col-md-8 py-3">
      <!-- make a card -->
      <div class="card card p-3 mb-3">
        <p><strong>BLABLA</strong></p>
        <p><small>BLABLA</small></p>
        <span>BLABLA</span>
      </div>

    <!-- /menu -->
    </div>

    <div class="col-md-4">
      <!-- checkout -->
      <div class="card p-3 m-3  sticky-top">

        <div class="d-flex align-items-center mt-3">
          <p><strong><h2>$<%= @space.price_per_day %></h2></strong></p>
        </div>
        <div class="d-flex align-items-center mt-1">
          <p><%= @space.address %>, <%= @space.city %></p>
        </div>
        <h5 class="mt-3 mb-3">Book this space</h5>
        <%= simple_form_for([@space, @reservation], url: new_space_reservation_path(@space), method: :get) do |f| %>
          <%= f.input :start_on %>
          <%= f.input :end_on %>
          <%= f.submit "Confirm", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
      <!-- /checkout -->
    </div>
  </div>
</div>
