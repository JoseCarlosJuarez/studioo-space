<div class="container">
  <div class="row justify-content-center listing">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 p-5 border shadow p-3 mb-5 bg-white rounded">
      <h2>Log in</h2><br>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :login,
                      placeholder: 'basquiat33',
                      required: false,
                      input_html: { autocomplete: "username" } %>
          <%= f.input :password,
                      required: false,
                      placeholder: 'your password',
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: 'remember me?', as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-outline-primary btn-block" %><br>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
