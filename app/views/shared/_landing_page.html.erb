<div class="container">
  <div class="row">
    <div class="col-lg" >
      <h1>Your next masterpiece starts here.</h1>
      <h4>Rent and Sublet creative spaces.</h4>
      <%= form_tag spaces_path, method: :get do %>
      <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a space"
                                      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
